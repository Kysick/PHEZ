<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizActivity"
    android:background="?attr/backgroundcolor">
    <TextView
        android:textColor="?attr/textcolor"
        android:id="@+id/numQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Question 1"
        android:textSize="40sp" />

    <TextView
        android:textColor="?attr/textcolor"
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Question"
        android:textSize="20sp"
        android:layout_below="@+id/numQ"/>

    <Button
        android:background="@drawable/buttonround"
        android:textColor="?attr/textcolor"
        android:id="@+id/ansbtn1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:text="Answer1"
        android:layout_marginHorizontal="10dp"
        android:onClick="checkAnswerBronze"
        android:layout_above="@+id/ansbtn2"/>

    <Button
        android:background="@drawable/buttonround"
        android:textColor="?attr/textcolor"
        android:id="@+id/ansbtn2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:text="Answer2"
        android:layout_marginHorizontal="10dp"
        android:onClick="checkAnswerBronze"
        android:layout_above="@+id/ansbtn3"/>

    <Button
        android:background="@drawable/buttonround"
        android:textColor="?attr/textcolor"
        android:id="@+id/ansbtn3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:text="Answer3"
        android:layout_marginHorizontal="10dp"
        android:onClick="checkAnswerBronze"
        android:layout_above="@+id/ansbtn4"/>

    <Button
        android:background="@drawable/buttonround"
        android:textColor="?attr/textcolor"
        android:id="@+id/ansbtn4"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Answer4"
        android:layout_marginHorizontal="10dp"
        android:onClick="checkAnswerBronze"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>